<% provide(:title, 'New formal') %>

<p> this is the page for new formals</p>
<br>
<div class="row", align="center">
  <div class="col-md-6 col-md-offset-3">
  	<%= form_for(@google_form, url: google_forms_path) do |gf| %>
  		<%= gf.label :formalname %>
  		<%= gf.text_field :formalname, class: 'form-control' %>

			<%= gf.label :formallink %>
  		<%= gf.text_field :formallink, class: 'form-control' %>

  		<%= gf.label :description %>
  		<%= gf.text_field :description, class: 'form-control' %>  		

  		<%= gf.submit "Add formal", class: "btn btn-primary" %>
  	<% end %> 
  </div>
</div>
